
@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="container p-4">
    <div class="card text-danger border rounded p-4 align-items-center">
        <h3><i class="fas fa-exclamation-triangle mb-3"></i> No tienes autorización.</h3>
        @if (ViewBag.operacion != "")
        {
            <p ><strong>Operación:</strong> @ViewBag.operacion</p>
        }
        @if (ViewBag.modulo != "")
        {
            <p ><strong>Módulo:</strong> @ViewBag.modulo</p>
        }
        @if (ViewBag.msjeErrorException != "")
        {
            <p><strong>Error:</strong>@ViewBag.msjeErrorException</p>
        }
    </div>
</main>