
@{
    ViewBag.Title = "Login";
}

    <div class="container mb-3">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/Assets/images/carousel01.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Assets/images/carousel02.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Assets/images/carousel03.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </a>
        </div>
    </div>


<main class="container p-4">

    <div class="row">
        <div class="col-md-4">
            <h3>Regístrese</h3>
            <p>
                Con su afiliación podrá hacer y editar nuevas reservas.
                Acceder a grandes promociones, descuentos y más...
            </p>

            <form action="@Url.Content("~/Acceso/Invitado")" method="post" class="container-fluid">
                <div class="form-group">   
                    <input type="hidden" name="user" value="invitado@car2go.com" />
                    <input type="hidden" name="pw" value="invitado" />
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-outline-success" value="Registrarme &raquo" />
                </div>

            </form>
        </div>

        <div class="col-md-4 text-muted">
            <h5> Testing Users</h5>
            <hr />
            <h5>Usuario Rol Administrador</h5>
            <p><strong>User:</strong> admin@uned.cr</p>
            <p><strong>Password:</strong> 123</p>
            <hr />
            <h5>Usuario Rol Cliente</h5>
            <p><strong>User:</strong> cliente@uned.cr</p>
            <p><strong>Password:</strong> 456</p>

        </div>

        <div class="col-md-4 mb-5">
            <h3>Login</h3>
            <hr />

            @*Validacion de Usuario y Contraseña*@
            <div class="text-danger"> @ViewBag.Error </div>

            <form action="@Url.Content("~/Acceso/Login")" method="post" class="container-fluid">
                <div class="form-group">
                    <label>Email</label> <br />
                    <input type="email" name="user" value="" />
                </div>

                <div class="form-group">
                    <label>Contraseña</label> <br />
                    <input type="password" name="pw" value="" />
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-outline-success" value="Acceder &raquo" />
                </div>

            </form>
        </div>

    </div>

</main>


